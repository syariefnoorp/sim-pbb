<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menu_activity.DetailCekNopActivity">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabContent"
        app:tabTextColor="@color/blueDark"
        app:tabIndicatorColor="@color/blueDark">

        <android.support.design.widget.TabItem
            android:id="@+id/dataPajak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Wajib Pajak"/>

        <android.support.design.widget.TabItem
            android:id="@+id/dataPbb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PBB" />

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/content"
        android:layout_margin="10dp"
        android:padding="13dp"
        android:background="@drawable/tab_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>